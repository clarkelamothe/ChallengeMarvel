<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.clarkelamothe.intermedia.ui.characters.CharactersFragment"
        tools:layout="@layout/fragment_characters">
        <action
            android:id="@+id/goToDetailsFragment"
            app:destination="@id/characterDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.clarkelamothe.intermedia.ui.events.EventsFragment"
        tools:layout="@layout/fragment_events" />
    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.clarkelamothe.intermedia.ui.characterDetails.CharacterDetailsFragment"
        tools:layout="@layout/fragment_character_details" />
</navigation>